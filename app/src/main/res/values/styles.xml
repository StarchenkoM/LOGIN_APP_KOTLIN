<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="ProfileFields" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/bottom_underline</item>
        <item name="android:layout_marginTop">@dimen/elements_margin_top</item>
        <item name="android:textColor">@color/text2</item>
        <item name="android:textSize">@dimen/screen_fields_text_size</item>
    </style>

    <style name="ProfileHints" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">@dimen/elements_margin_top</item>
        <item name="android:textColor">@color/lines</item>
        <item name="android:textSize">@dimen/profile_hint_text_size</item>
    </style>

    <style name="LoginEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/text2</item>
        <item name="android:layout_marginTop">@dimen/elements_margin_top</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edt</item>
        <item name="android:backgroundTint">@color/focused_item_color_selector</item>
        <item name="android:textSize">@dimen/screen_fields_text_size</item>
    </style>


</resources>

